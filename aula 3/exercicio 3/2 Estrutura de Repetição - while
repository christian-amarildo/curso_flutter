import 'dart:io';
import 'dart:math';

void main() {
  final int numeroSecreto = gerarNumeroSecreto();
  const int tentativasMaximas = 5;
  int tentativas = 0;
  
  print("Bem-vindo ao jogo de adivinhação do número secreto!");
  print("Tente adivinhar o número entre 1 e 10.");
  
  while (tentativas < tentativasMaximas) {
    stdout.write("Tentativa ${tentativas + 1}: Digite seu palpite: ");
    int palpite = int.parse(stdin.readLineSync()!);
    
    if (palpite == numeroSecreto) {
      print("Parabéns! Você acertou o número secreto ${numeroSecreto}!");
      return;
    } else if (palpite < numeroSecreto) {
      print("O número secreto é maior que o seu palpite.");
    } else {
      print("O número secreto é menor que o seu palpite.");
    }
    
    tentativas++;
  }
  
  print("Suas tentativas acabaram! O número secreto era ${numeroSecreto}.");
}

int gerarNumeroSecreto() {
  final random = Random();
  return random.nextInt(10) + 1;
}
